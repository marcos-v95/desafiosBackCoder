{{#if isValid}}
  <h3>Nuestra Tienda de productos! </h3>
  <div style="display: grid;grid-template-columns: repeat(3, 1fr);grid-template-rows: repeat(2, 1fr);grid-column-gap: 30px;grid-row-gap: 20px;">
    {{#each payload}}
      <div>
        <div>
          <p>{{this.title}}</p>
          <p>{{this.description}}</p>
          <p>Precio: {{this.price}}</p>
          <p>Stock disponible: {{this.stock}}</p>
        </div>
        <div>
          <form id="shopForm">
            <label for="quantity">cantidad seleccionada</label>
            <input type="text" name="quantity">
            <button type="submit" onclick="addToCart({{this._id}})">Agregar al carrito</button>
          </form>
        </div>
      </div>
    {{/each}}

  </div>
  <br/>
  <div>
    <p>Pagina actual: {{this.currentPage}}</p>

    {{#if hasPrevPage}}
      <a href={{this.prevLink}}> << Anterior</a>
    {{/if}}

    {{#if hasNextPage}}
      <a href={{this.nextLink}}>Siguiente >> </a>
    {{/if}}    

  </div>

{{else}}
  <div>
    <p>No hay productos para mostrar</p>
  </div>
{{/if}}
<script src="js/shop.js"></script>